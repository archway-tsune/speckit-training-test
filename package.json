{
  "name": "ec-site-arch",
  "version": "1.0.31",
  "description": "ECサイト向けアーキテクチャ基盤",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:unit:samples": "vitest run src/samples/tests/unit --config vitest.samples.config.ts",
    "test:integration:samples": "vitest run src/samples/tests/integration --config vitest.samples.config.ts",
    "test:e2e:samples": "playwright test --config playwright.samples.config.ts",
    "test:coverage": "vitest run --coverage",
    "release": "powershell -ExecutionPolicy Bypass -File ./scripts/create-release-tag.ps1"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
